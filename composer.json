{
    "name": "radiocubito/laravel-package-tools",
    "description": "Useful tools to help you with your next Laravel package.",
    "keywords": [
        "radiocubito",
        "laravel-package-tools"
    ],
    "homepage": "https://github.com/radiocubito/laravel-package-tools",
    "license": "MIT",
    "authors": [
        {
            "name": "Oliver Jiménez-Servín",
            "email": "oliver@radiocubito.com",
            "homepage": "https://radiocubito.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "illuminate/contracts": "^8.0",
        "mnapoli/silly": "^1.7"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.3",
        "spatie/phpunit-snapshot-assertions": "^4.2",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Radiocubito\\LaravelPackageTools\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Radiocubito\\LaravelPackageTools\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "pkg-tools"
    ]
}
